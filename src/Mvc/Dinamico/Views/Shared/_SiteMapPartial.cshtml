@Html.ActionLink("Site map", Content.StartPage, "SiteMap", null, new { id = "sitemap" })
<script type="text/javascript">//<![CDATA[
	$(document).ready(function () {
		var $sm = null;
		$("#sitemap").click(function (e) {
			e.preventDefault();
			e.stopPropagation();
			$sm = $("<ul class='sitemap'></ul>").appendTo(this.parentNode)
				.css({ left: $(this).position().left + "px" })
				.load(this.href, null, function () { $("a:first", this).focus(); });
		});
		$(document).click(function () {
			if ($sm) $sm.remove();
			$sm = null;
		});
	});
//]]></script>