@model Dinamico.Models.ContentPart
@using N2.Web.Mvc.Html
		   
@{ Content.Define(ie => 
	   {
		   ie.Title = "Teaser";
		   ie.Link("ForwardsTo");
		   ie.ImageSize("ImageSize", "Image Size").Configure(e => e.DefaultValue = "");
	   }); }
<div class="part teaser">
@if (Content.HasValue("ForwardsTo"))
{
	@Html.Partial("Partials/ContentLink", (N2.ContentItem)Content.Data.ForwardsTo, new ViewDataDictionary { { "preferredSize", Dinamico.Defaults.ImageSize(Content.Data.ImageSize, Content.CurrentItem.ZoneName) } })
}
else
{
	<p>No target</p>
}
</div>