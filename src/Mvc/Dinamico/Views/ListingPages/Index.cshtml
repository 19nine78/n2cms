@model Dinamico.Models.ListingPage

@{
	Content.Define(re => 
	{
		re.Title = "Listing";
	});
}

@Html.Partial("LayoutPartials/Content")

@Html.Loop(Content.Traverse.DescendantPages(Content.CurrentPage, Content.Is.Accessible()),
	template:@<div class="list-item">
		@Html.Partial("Partials/ContentLink", item.Data)
	</div>,
	wrapper: @<div class="list">@item.RenderContents()</div>,
	empty:@<p>No items</p>)