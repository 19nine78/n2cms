<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" default-lazy="false">
	
	<!-- AuthorizedRole -->
	<class name="N2.Security.AuthorizedRole,N2" table="n2AllowedRole">
		<cache usage="nonstrict-read-write" />

		<id name="ID" column="ID" type="Int32" unsaved-value="0">
			<generator class="native"/>
		</id>
		<many-to-one name="EnclosingItem" column="ItemID" class="N2.ContentItem,N2" not-null="true" />
		<property name="Role" column="Role" type="String" not-null="true" length="50" />
	</class>


	<!-- ContentDetail: Boolean-, Integer-, Link-, Double-, DateTime-, String-, Object-Detail -->
	<class name="N2.Details.ContentDetail,N2" table="n2Detail">
		<cache usage="read-write" />

		<id name="ID" column="ID" type="Int32" unsaved-value="0">
			<generator class="native"/>
		</id>
		<discriminator column="Type" type="String" />

		<many-to-one name="EnclosingItem" column="ItemID" class="N2.ContentItem,N2" not-null="true" fetch="select" />
		<many-to-one name="EnclosingCollection" column="DetailCollectionID" class="N2.Details.DetailCollection,N2" fetch="select" />

		<property name="Name" type="String" length="50" />

		<subclass name="N2.Details.BooleanDetail,N2" discriminator-value="Bool">
			<property name="BoolValue" type="Boolean" />
		</subclass>

		<subclass name="N2.Details.IntegerDetail,N2" discriminator-value="Int">
			<property name="IntValue" type="Int32" />
		</subclass>

		<subclass name="N2.Details.LinkDetail,N2" discriminator-value="Link">
			<many-to-one name="LinkedItem" column="LinkValue" class="N2.ContentItem,N2" />
		</subclass>

		<subclass name="N2.Details.DoubleDetail,N2" discriminator-value="Double">
			<property name="DoubleValue" type="Double" />
		</subclass>

		<subclass name="N2.Details.DateTimeDetail,N2" discriminator-value="DateTime">
			<property name="DateTimeValue" type="DateTime" />
		</subclass>

		<subclass name="N2.Details.StringDetail,N2" discriminator-value="String">
			<property name="StringValue" type="StringClob" length="1073741823" />
		</subclass>

		<subclass name="N2.Details.ObjectDetail,N2" discriminator-value="Object">
			<property name="Value" type="Serializable" length="2147483647" />
		</subclass>
	</class>


	<!-- ContentItem -->
	<class name="N2.ContentItem,N2" table="n2Item">
		<cache usage="read-write" />

		<id name="ID" column="ID" type="Int32" unsaved-value="0">
			<generator class="native" />
		</id>

		<discriminator column="Type" type="String" />
		<timestamp name="Updated"/>
		<property name="Name"		type="String" length="255"/>
		<property name="ZoneName"	type="String" length="50"/>
		<property name="Title"		type="String" length="255"/>
		<property name="Created"	type="DateTime" not-null="true"/>
		<property name="Published"	type="DateTime"/>
		<property name="Expires"	type="DateTime"/>
		<property name="SortOrder"	type="Int32" not-null="true"/>
		<property name="Visible"	type="Boolean" not-null="true"/>
		<property name="SavedBy"	type="String" length="50"/>

		<many-to-one name="VersionOf"	column="VersionOfID"	class="N2.ContentItem,N2" not-null="false" fetch="select" />
		<many-to-one name="Parent"		column="ParentID"		class="N2.ContentItem,N2" not-null="false" fetch="select" />

		<bag name="Children" cascade="all" generic="true" inverse="true" order-by="SortOrder">
			<cache usage="read-write" />
			<key column="ParentID" />
			<one-to-many class="N2.ContentItem,N2"/>
		</bag>

		<map name="Details" inverse="true" cascade="all-delete-orphan" generic="true" where="DetailCollectionID IS NULL">
			<cache usage="read-write" />
			<key column="ItemID" />
			<index column="Name" type="String" />
			<one-to-many class="N2.Details.ContentDetail, N2"/>
		</map>

		<map name="DetailCollections" inverse="true" cascade="all-delete-orphan" generic="true">
			<cache usage="read-write" />
			<key column="ItemID" />
			<index column="Name" type="String" />
			<one-to-many class="N2.Details.DetailCollection, N2"/>
		</map>

		<bag name="AuthorizedRoles" inverse="true" cascade="all-delete-orphan" generic="true" fetch="join">
			<cache usage="read-write" />
			<key column="ItemID"/>
			<one-to-many class="N2.Security.AuthorizedRole, N2"/>
		</bag>
	</class>


	<!-- DetailCollection -->
	<class name="N2.Details.DetailCollection,N2" table="n2DetailCollection">
		<cache usage="read-write" />

		<id name="ID" column="ID" type="Int32" unsaved-value="0">
			<generator class="native"/>
		</id>

		<many-to-one name="EnclosingItem" column="ItemID" class="N2.ContentItem,N2" />
		<property name="Name"			type="String" not-null="true" length="50" />

		<bag name="Details" generic="true" cascade="all-delete-orphan" inverse="true">
			<cache usage="nonstrict-read-write"/>
			<key column="DetailCollectionID" />
			<one-to-many class="N2.Details.ContentDetail,N2"/>
		</bag>
	</class>

</hibernate-mapping>
