<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" default-lazy="false">
	<class name="N2.ContentItem,N2" table="n2Item">
		<cache usage="read-write" />
		
		<id name="ID" column="ID" type="Int32" unsaved-value="0">
			<generator class="native" />
		</id>
    
		<discriminator column="Type" type="String" />
		<timestamp name="Updated"/>
		<property name="Name"		type="String" length="255"/>
		<property name="ZoneName"	type="String" length="50"/>
    <property name="Title"		type="String" length="255"/>
    <property name="Created"	type="DateTime" not-null="true"/>
    <property name="Published"	type="DateTime"/>
    <property name="Expires"	type="DateTime"/>
    <property name="SortOrder"	type="Int32" not-null="true"/>
    <property name="Visible"	type="Boolean" not-null="true"/>
    <property name="SavedBy"	type="String" length="50"/>

		<many-to-one name="VersionOf"	column="VersionOfID"	class="N2.ContentItem,N2" not-null="false" fetch="select" />
		<many-to-one name="Parent"		column="ParentID"		class="N2.ContentItem,N2" not-null="false" fetch="select" />

    <bag name="Children" cascade="all" generic="true" inverse="true" order-by="SortOrder">
      <cache usage="read-write" />
      <key column="ParentID" />
      <one-to-many class="N2.ContentItem,N2"/>
    </bag>

    <map name="Details" inverse="true" cascade="all-delete-orphan" generic="true" where="DetailCollectionID IS NULL">
      <cache usage="read-write" />
      <key column="ItemID" />
      <index column="Name" type="String" />
      <one-to-many class="N2.Details.ContentDetail, N2"/>
    </map>

    <map name="DetailCollections" inverse="true" cascade="all-delete-orphan" generic="true">
      <cache usage="read-write" />
      <key column="ItemID" />
      <index column="Name" type="String" />
      <one-to-many class="N2.Details.DetailCollection, N2"/>
    </map>

    <bag name="AuthorizedRoles" inverse="true" cascade="all-delete-orphan" generic="true" fetch="join">
      <cache usage="read-write" />
      <key column="ItemID"/>
      <one-to-many class="N2.Security.AuthorizedRole, N2"/>
    </bag>
	</class>
</hibernate-mapping>
